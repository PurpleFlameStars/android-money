<?xml version="1.0" encoding="utf-8"?>
<com.dzfd.gids.baselibs.UI.widgets.NoNetWorkView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/error_img" />

    <TextView
        android:id="@+id/txt_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/nonetview_title1"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/nonetview_title2"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/error_retry"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/erro_retry_btn_bg"
        android:gravity="center"
        android:text="@string/nonetview_button_retry"
        android:textAllCaps="false"
        android:textColor="#FF0000"
        android:textSize="18sp" />
</com.dzfd.gids.baselibs.UI.widgets.NoNetWorkView>
